{# src/MCD/PlatformBundle/Resources/views/Advert/index.html.twig #}

{% extends "ZRRCandidatureBundle::layoutAdmin.html.twig" %}
{% block title %}
    Accueil - {{ parent() }}
{% endblock %}


{% block zrr_admin_body %}
    <div class="row">
        <div class="panel panel-primary">
            <div align="center" class="panel-heading">
                <h3>
                    <strong>
                    La liste des dossiers
                    </strong>
                </h3>
            </div>
            <table class="table">

            <thead>
            <tr>
                <th>Num√©ro de dossier</th>
                <th>Date de la demande</th>
                <th>Etat du dossier</th>
                <th colspan="3" >Actions</th>
            </tr>
            </thead>
                <tbody>

                {% for dossier in listDossier %}

                <tr>
                    <td>{{ dossier.numDossier }}</td>
                    <td>{{ dossier.dateDemande|date('d/m/Y') }},</td>
                    <td>{{ dossier.etatDossier }}</td>
                    <td>
                        <a href="{{ path('zrr_dossier_view', {'dossier_id': dossier.id}) }}" class="btn btn-info">
                            <span class="glyphicon glyphicon-eye-open"></span>
                            Afficher
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('zrr_dossier_edit', {'dossier_id': dossier.id}) }}" class="btn btn-info">
                            <i class="glyphicon glyphicon-edit"></i>
                            Modifier
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('zrr_dossier_delete', {'dossier_id': dossier.id}) }}" class="btn btn-danger">
                            <i class="glyphicon glyphicon-trash"></i>
                            Supprimer
                        </a>
                    </td>
                </tr>

            {% else %}
                <li>Pas (encore !) de dossiers</li>
            {% endfor %}
                </tbody>
        </table>
    </div>
</div>
{% endblock %}
